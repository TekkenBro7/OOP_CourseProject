<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Manager.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Manager.UI"
    xmlns:pages="clr-namespace:Manager.UI.Pages"
    Title="Manager"
    Background="CornflowerBlue"
    Shell.FlyoutBehavior="Flyout">
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage"
        Icon="ccc.jpeg"/>
    <ShellContent
        Title="zxc"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage"
        Icon="ccc.jpeg"/>

    <TabBar>
        <!-- Main Page Tab -->
        <Tab Title="MainPage">
            <ShellContent ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage"/>
        </Tab>
        <!-- Profile Page Tab -->
        <Tab Title="ProfilePage">
            <ShellContent ContentTemplate="{DataTemplate pages:ProfilePage}" 
            Route="ProfilePage"/>
        </Tab>
        <!-- Add Task Page Tab -->
        <Tab Title="AddTaskPage">
            <ShellContent ContentTemplate="{DataTemplate pages:AddTaskPage}" 
            Route="AddTaskPage" />
        </Tab>
        
    </TabBar>

</Shell>
